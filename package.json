{
  "name": "pathprefixer",
  "displayName": "PathPrefixer",
  "description": "This extension helps you quickly add the relative path of the current file in the first line as a comment. Supports 40+ programming languages with appropriate comment syntax for each language.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pathprefixer.addRelativePath",
        "title": "Add Relative Path Comment"
      }
    ],
    "keybindings": [
      {
        "command": "pathprefixer.addRelativePath",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "pathprefixer.addRelativePath",
          "group": "modification"
        }
      ]
    },
    "configuration": {
      "title": "PathPrefixer",
      "properties": {
        "pathprefixer.includeAttribution": {
          "type": "boolean",
          "default": true,
          "description": "Include '-- added by PathPrefixer' in the comment"
        },
        "pathprefixer.defaultBaseDirectory": {
          "type": "string",
          "enum": [
            "workspace",
            "parent"
          ],
          "default": "workspace",
          "description": "Default base directory for computing relative paths"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "watch": "webpack --watch",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "make-vsix": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}